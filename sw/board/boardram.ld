ENTRY(_start)

MEMORY
{
	   bkram(wx) : ORIGIN = 0x00400000, LENGTH = 0x00002000
	   flash(rx) : ORIGIN = 0x00800000, LENGTH = 0x00800000
}

_bkram    = ORIGIN(bkram);
_flash    = ORIGIN(flash);
SECTIONS
{
	.rocode ORIGIN(bkram) : {
		_boot_address = .;
		*(.start) *(.boot)
		*(.kernel)
		*(.text.startup)
		*(.text*)
		*(.rodata*) *(.strings)
		*(.data) *(COMMON) *(.bss)
		} > bkram
	_kernel_image_start = . ;
	_sdram_image_start = . ;
	_sdram_image_end = . ;
	.bss : {
		*(.bss)
		_bss_image_end = . ;
		} > bkram
	_top_of_heap = .;
}
